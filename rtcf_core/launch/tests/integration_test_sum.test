<launch>
    <node name="runner" pkg="rtcf" type="rt_runner-gnulinux" output="screen">
        <rosparam param="mode">"wait_for_components"</rosparam>
        <rosparam param="whitelist_ros_mapping">".*ros.*"</rosparam>-->
        <rosparam param="num_components_expected">2</rosparam>
        <rosparam param="frequency">10</rosparam>
    </node>

    <node name="sum_1" pkg="rtcf" type="rt_launcher" output="screen">
        <remap from="out_Port" to="/mapped/1"/>
        <remap from="in_Port_1" to="/mapped/in_from_ros"/>

        <rosparam param="is_first">false</rosparam>
        <rosparam param="rt_type">"sum"</rosparam>
        <rosparam param="is_sync">true</rosparam>
    </node>

    <node name="sum_2" pkg="rtcf" type="rt_launcher" output="screen">
        <remap from="out_Port" to="/mapped/to_ros"/>
        <remap from="in_Port_1" to="/mapped/1"/>
        <remap from="in_Port_2" to="/mapped/1"/>

        <rosparam param="is_first">false</rosparam>
        <rosparam param="rt_type">"sum"</rosparam>
        <rosparam param="is_sync">true</rosparam>
    </node>

    <test test-name="test_rtcf" pkg="rtcf" type="test_integration_sum"/>
</launch>
